# Database Configuration
DB_HOST=localhost
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=file_management_db

# JWT Secret
JWT_SECRET=your_jwt_secret_key_here

# Server Configuration
PORT=5001
NODE_ENV=development

# Frontend URL (for CORS - comma separated for multiple URLs)
# Example: FRONTEND_URL=https://your-frontend-domain.com,https://www.your-frontend-domain.com
# For production, set this to your deployed frontend URL(s)
FRONTEND_URL=http://localhost:3000

# Hostinger FTP Configuration
FTP_HOST=your_hostinger_ftp_host
FTP_USER=your_hostinger_ftp_user
FTP_PASSWORD=your_hostinger_ftp_password
FTP_PORT=21

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
